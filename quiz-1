numero = float(input("introduzca un numero "))
if numero > 0:
    print("el numero es positivo")
else:
    if numero == 0:
        print("el numero es 0")
    else:
        if numero < 0:
            print("el numero es negetivo")
if numero % 2 == 0:
    print("el numero es par")
else:
    print("el numero es impar")
